{
  "name": "api-2",
  "version": "1.0.0",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "types": "build/types/index.d.ts",
  "type": "module",
  "exports": {
    "types": "./build/types/index.d.ts",
    "import": "./build/esm/index.js",
    "require": "./build/cjs/index.js"
  },
  "files": [
    "build/**/*.js",
    "build/**/*.js.map",
    "build/**/*.d.ts",
    "build/**/*.d.ts.map"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.types.json tsconfig.esm.json tsconfig.cjs.json",
    "postbuild": "echo '{\"type\":\"commonjs\"}' > build/cjs/package.json",
    "clean": "rm -rf build",
    "prebuild": "npm run clean",
    "prepack": "npm run build",
    "check": "tsc --noEmit",
    "start": "tsx main.ts",
    "bundle": "webpack --config webpack.config.json"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.1",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  }
}
