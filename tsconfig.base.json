{
  "compilerOptions": {
    "outDir": "build/esm",
    "rootDir": "src",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "inlineSources": true,
    "isolatedModules": true,
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "newLine": "LF",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2022",
    "useUnknownInCatchVariables": false,
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "sdk.ts",
    "main.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
